%h2 #{@user.nome}
   
%ul#details
  %li
    Email:
    = @user.email
  %li
    Telefone:
    = @user.telefone
  %li
    Número USP:
    = @user.documento
  %li
    Armário:
  -if current_user == @user
    = link_to 'Editar', edit_user_path(@user)
    = button_to 'Deletar', user_path(@user), :method => :delete, :confirm => 'Deletar Usuário?'
    = link_to 'Logout', logout_path, method: :delete
    = link_to 'Índice de Usuários', users_path
    = link_to 'Requerir Armário', locker_occupation_path
  -else
    = link_to 'Login', login_path
